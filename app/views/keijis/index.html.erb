<p id="notice"><%= notice %></p>

<h1>Keijis</h1>

<table>
  <thead>
    <tr>
      <th>カテゴリ</th>
      <th>タイトル</th>
      <th>掲載日</th>
      <th>掲載期限</th>
      <th>閲覧回数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keijis.each do |keiji| %>
      <tr>
        <% _cat = Category.find_by_id( keiji.category_id ) %>
        <% if _cat != nil %>
            <td><%= _cat.label %></td>
        <% else %>
            <td></td>
        <% end %>
        <% if keiji.pdffile_file_name != nil %>
            <td><a href=<%= ("../" + keiji.pdffile.url(:original)) %> target="_blank"><%= keiji.title %></a></td>
        <% else %>
            <td></td>
        <% end %>
        <td><%= keiji.start %></td>
        <td><%= keiji.end %></td>
        <td><%= keiji.viewcount %></td>
        <% if keiji.pdffile_file_name != nil %>
            <td><a href=<%= ("../" + keiji.pdffile.url(:original)) %> target="_blank">内容表示</a></td>
        <% else %>
            <td></td>
        <% end %>
        <td><%= link_to '内容変更', keiji %></td>
        <td><%= link_to '内容変更', edit_keiji_path(keiji) %></td>
        <td><%= link_to '削除', keiji, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

