<p id="notice"><%= notice %></p>

<h1>カテゴリ設定</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.label %></td>
        <td><%= link_to '修正', edit_category_path(category) %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: '削除すると掲示板で設定されていたの表示が消えますがよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

